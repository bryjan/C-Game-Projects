#include <iostream>
#include <string>
#include <iomanip>
using namespace std;

char terChar[40][30];

char mapGen();
void printMap();


int main()
{
    int y=-1;
    for(int i=0;i<30;i++)
    { y++;
    for(int x=0;x<40;x++)
        {
            terChar[x][y]=mapGen();
         }
    }
printMap();
return 0;
}

char mapGen()
{
    int genNum=0; 
     genNum= rand() % 100; 
     
if(genNum<50) 
return '_'; 
else if(genNum<80) 
return 'f'; 
else if(genNum<99) 
return 'm'; 
else 
return 'C'; 
    }
    
void printMap()
{
    int y=-1;
    for(int i=0;i<30;i++)
    { y++;
    for(int x=0;x<40;x++)
        {
            if(x==0||x==39||y==0||y==29)
            cout<<"X";
            else if(x==20&&y==15)
            cout<<"A";
            else
            cout<<terChar[x][y];
         }
         cout<<endl;
    }
}
